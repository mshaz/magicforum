<div class="new">
  <%= form_for(:user, url: sessions_path, html: { id: "user-create-form" }) do |f| %>
    <h1 class="text-center">
      Log In
    </h1>

    <div class="form-group">
      <h4> <%= f.label :email_field, "Email:" %> </h4>
      <%= f.text_field :email, required: true, id: "user_email_field", class: 'form-control' %>
    </div>

    <div class="form-group">
      <h4> <%= f.label :text_field, "Password:" %> </h4>
      <%= f.text_field :password, required: true, id: "user_password_field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Log in", class: "btn btn-success btn-lg" %>
    </div>

    <div class="text-center">
    <%= link_to "Forgot password?", new_password_reset_path %>
    </div>
    <% end %>
</div>
