<%= form_for(@topic, url: topic_path(@topic), html: { id: "topic-update-form" }) do |f| %>
  <h1 class="text-center">
    Update Posts
  </h1>

  <div class="form-group">
    <h4> <%= f.label :title_field, "Title" %> </h4>
    <%= f.text_field :title, required: true, id: "post_title_field", class: 'form-control' %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :text_field, "Body" %> </h4>
    <%= f.text_field :description, id: "post_body_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Update Post", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
