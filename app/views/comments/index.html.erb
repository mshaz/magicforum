<h1>Posts</h1>

<% @posts.each do |post| %>
  <div class="post">
    <h3><%= post.title %></h3>
    <h5><%= post.body %></h5>
    <%= link_to post.title, topic_post_comments_path(@topic,post) %>
    <%= button_to "edit post", edit_topics_post_path(@topic,post), :method => :get %>
  </div>

<% end %>

